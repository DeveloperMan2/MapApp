			</s:HGroup>	
			<s:List id="mbLayerNameList" width="100%" height="100%"
					requireSelection="true" selectedIndex="0" 
					textAlign="left"  contentBackgroundAlpha="0"
					itemRenderer="com.renderer.LayerItemRenderer"
