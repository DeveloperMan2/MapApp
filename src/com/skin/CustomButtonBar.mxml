<!--- The default skin class for the Spark Button component.  

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   width="{144*getStyle('multiResolution')}"
				   height="{144*getStyle('multiResolution')}"
				   alpha.disabled="0.5">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("sm.mobile.jx.component.iconbutton.ButtonItem")]
		]]>
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
		<s:State name="keepSelected" />
	</s:states>
	<s:Rect id="normalrect" left="0" right="0" top="0" bottom="0" 
			radiusX="3" radiusY="3">
		<s:fill>
			<s:SolidColor color="#CCCCCC" alpha="0.8"/>
		</s:fill>
	</s:Rect>
	
	<!-- down over-->
	<s:Rect id="active" left="0" right="0" top="0" bottom="0" 
			radiusX="3" radiusY="3" includeIn="down,keepSelected">
		<s:fill>
			<s:SolidColor color="#123221" alpha="0.8"/>
			
		</s:fill>
		<s:filters>
			<s:GlowFilter blurX="5" blurY="5" color="#EDEDED"/>
		</s:filters>
	</s:Rect>
	
	<!--- @private -->
	<s:Rect id="hldownstroke2" left="0" right="0" top="0" bottom="0" 
			radiusX="3" radiusY="3" includeIn="down,keepSelected">
		<s:stroke>
			<s:SolidColorStroke color="#D3C5C8" weight="2"/>
		</s:stroke>
	</s:Rect>
	
	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
	<s:Label id="labelDisplay"
			 textAlign="center"
			 maxDisplayedLines="1" color="#000000"
			 horizontalCenter="1" verticalCenter="0" verticalAlign="bottom"
			 left="2" right="2" top="2" bottom="2" showTruncationTip="true">
	</s:Label>
	
</s:SparkButtonSkin>
