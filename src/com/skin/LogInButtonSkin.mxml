<!--- The default skin class for the Spark Button component.  

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   width="{72 * getStyle('multiResolution')}" height="{72 * getStyle('multiResolution')}"
				   alpha.disabled="0.5">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- layer 2: fill -->
	<!--- @private -->
	<s:Rect id="fill" left="0" right="0" top="0" bottom="0" excludeFrom="up,disabled" radiusX="6" radiusY="6">
		<s:fill>
			<s:SolidColor color="#EEF3FA"/>
		</s:fill>		
	</s:Rect>
	
	<!-- layer 7: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
	<!--- @private -->
	<s:Rect id="border" left="0" right="0" top="0" bottom="0" radiusX="6" radiusY="6">
		<s:stroke>
			<s:SolidColorStroke color="#FCFCFC" weight="3"/>
		</s:stroke>
	</s:Rect>
	
	<s:HGroup width="100%" height="100%" 
		paddingBottom="20" paddingTop="20" paddingLeft="20" paddingRight="20" horizontalAlign="center" verticalAlign="middle">
		<!-- layer 8: text -->
		<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
		<s:Label id="labelDisplay" color="#F1F1F1" fontWeight="bold"  width="100%" height="100%" 
				 textAlign="center"
				 maxDisplayedLines="1"
				 horizontalCenter="0" verticalCenter="1" verticalAlign="middle"
				 left="10" right="10" top="2" bottom="2">
		</s:Label>
	</s:HGroup>
</s:SparkButtonSkin>
